<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Tema que se aplica a la Activity en SplashActivity y que no tiene AppBar-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    El atributo padding y margin no se definen en estilos, ya que se
    aplican despues de dibujar la interfaz.

    <style name="lly_login_edittext">
        <item name="android:padding">@dimen/lly_login_edittext</item>
    </style>


    <!--Estilo para crear un botÃ³n transparente. Aplicando herencia -->
    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
    </style>

    <style name="LoginCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
